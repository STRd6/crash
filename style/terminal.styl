html, body, .terminal, pre
  height: 100%

.terminal
  position: relative

pre
  background-color: black
  box-sizing: border-box
  color: #080
  padding-bottom: 20px

input
  background-color: black
  box-sizing: border-box
  border: none
  color: #080
  margin: 0
  position: absolute
  bottom: 0
  width: 100%

body, pre, input
  font-family: Monaco, Menlo, 'Ubuntu Mono', 'Droid Sans Mono', Consolas, monospace
  font-size: 18px
  margin: 0
